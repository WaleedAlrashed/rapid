{
  "name": "rapida",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint **/*.js --color"
  },
  "devDependencies": {
    "eslint": "6.7.2",
    "eslint-config-rapida": "0.1.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "rapida",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
