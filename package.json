{
  "name": "rapid-ui",
  "version": "0.0.1",
  "description": "Rapid JavaScript development environment for building UI.",
  "private": true,
  "scripts": {
    "serve": "run-p test:watch lint:watch webpack:dev",
    "webpack:dev": "webpack-dev-server --config bin/webpack.config.dev.babel.js --color",
    "prebuild": "npm run clean",
    "build": "run-p test lint webpack:prod",
    "webpack:prod": "cross-env NODE_ENV=production webpack --config bin/webpack.config.prod.babel.js --color",
    "lint": "run-p eslint puglint stylint",
    "lint:watch": "run-p eslint:watch puglint:watch stylint:watch",
    "eslint": "eslint **/*.js --color",
    "eslint:watch": "chokidar --initial --silent \"bin/**/*.js\" \"ui/**/*.js\" -c \"npm run eslint\"",
    "puglint": "pug-lint --reporter node_modules/puglint-stylish ui --color",
    "puglint:watch": "chokidar --initial --silent \"ui/**/*.pug\" -c \"npm run puglint\"",
    "stylint": "stylint ui --color",
    "stylint:watch": "chokidar --initial --silent \"ui/**/*.styl\" -c \"npm run stylint\"",
    "test": "mocha --reporter progress bin/test.js ui/**/*.test.js --color",
    "test:watch": "chokidar --initial --silent \"ui/**/*.test.js\" -c \"npm run test\"",
    "clean": "rimraf dist",
    "share": "run-p serve localtunnel",
    "localtunnel": "lt --port 3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuotron/rapid-ui.git"
  },
  "keywords": [
    "ui",
    "starter-kit",
    "boilerplate",
    "webpack",
    "rapid"
  ],
  "author": "Nuotron <hello@nuotron.co>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nuotron/rapid-ui/issues"
  },
  "homepage": "https://github.com/nuotron/rapid-ui#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.5",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "chokidar-cli": "^1.2.2",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-rapid": "^0.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^15.1.0",
    "kouto-swiss": "^1.1.0",
    "localtunnel": "^1.9.1",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.6.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "pug-lint": "^2.5.0",
    "pug-lint-config-rapid": "^0.1.0",
    "puglint-stylish": "^1.0.1",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-merge": "^4.2.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "rapid",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "eslintIgnore": [
    "dist/"
  ],
  "pugLintConfig": {
    "extends": "rapid"
  },
  "stylintrc": {
    "blocks": false,
    "brackets": "never",
    "colons": "always",
    "colors": "always",
    "commaSpace": "always",
    "commentSpace": "always",
    "cssLiteral": "never",
    "customProperties": [],
    "depthLimit": false,
    "duplicates": true,
    "efficient": "always",
    "exclude": [],
    "extendPref": "@extend",
    "globalDupe": true,
    "groupOutputByFile": true,
    "indentPref": 2,
    "leadingZero": "never",
    "maxErrors": false,
    "maxWarnings": false,
    "mixed": true,
    "mixins": [],
    "namingConvention": "camelCase",
    "namingConventionStrict": true,
    "none": "always",
    "noImportant": true,
    "parenSpace": "never",
    "placeholders": "never",
    "prefixVarsWithDollar": "never",
    "quotePref": "single",
    "reporterOptions": {
      "columns": [
        "lineData",
        "severity",
        "description",
        "rule"
      ],
      "columnSplitter": "  ",
      "showHeaders": false,
      "truncate": true
    },
    "semicolons": "never",
    "sortOrder": "grouped",
    "stackedProperties": "never",
    "trailingWhitespace": "never",
    "universal": false,
    "valid": true,
    "zeroUnits": "never",
    "zIndexNormalize": false
  }
}
