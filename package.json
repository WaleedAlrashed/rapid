{
  "name": "rapid-ui",
  "version": "0.0.1",
  "description": "Rapid JavaScript development environment for building UI",
  "main": "bin/server.js",
  "scripts": {
    "prestart": "npm run clean",
    "start": "run-p application eslint:watch stylint:watch puglint:watch test:watch",
    "start:prod": "cross-env NODE_ENV=production npm run application:prod",
    "application": "nodemon bin/server.js --exec babel-node --color",
    "application:prod": "babel-node bin/server.js --color",
    "eslint": "eslint **/*.js --color",
    "eslint:watch": "chokidar --initial --silent \"*.js\" \"bin/**/*.js\" \"ui/**/*.js\" -c \"npm run eslint\"",
    "stylint": "stylint ui --color",
    "stylint:watch": "chokidar --initial --silent \"ui/**/*.styl\" -c \"npm run stylint\"",
    "puglint": "pug-lint ui",
    "puglint:watch": "chokidar --initial --silent \"ui/**/*.pug\" -c \"npm run puglint\"",
    "test": "mocha --reporter progress bin/test.js ui/**/*.test.js --color",
    "test:watch": "chokidar --initial --silent \"ui/**/*.test.js\" -c \"npm run test\"",
    "clean": "rimraf storage/public",
    "share": "run-p application localtunnel",
    "localtunnel": "lt --port 3000 --subdomain rapid-ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuotron/rapid-ui.git"
  },
  "keywords": [
    "ui",
    "starter-kit",
    "boilerplate",
    "express",
    "rapid"
  ],
  "author": "Nuotron <hello@nuotron.co>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nuotron/rapid-ui/issues"
  },
  "homepage": "https://github.com/nuotron/rapid-ui#readme",
  "dependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "chai": "^4.2.0",
    "chalk": "^2.4.1",
    "chokidar-cli": "^1.2.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "debug": "^4.1.0",
    "eslint": "^5.8.0",
    "eslint-config-rapid": "^0.1.0",
    "express": "^4.16.4",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^13.0.0",
    "kouto-swiss": "^1.1.0",
    "localtunnel": "^1.9.1",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "pug-lint": "^2.5.0",
    "pug-lint-config-rapid": "^0.1.0",
    "rapid-error-handler": "0.0.1",
    "rimraf": "^2.6.2",
    "serve-favicon": "^2.5.0",
    "style-loader": "^0.23.1",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.25.0",
    "webpack-dev-middleware": "^3.4.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": "> 0.25%, not dead"
        }
      ]
    ]
  },
  "eslintIgnore": [
    "dist/"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "rapid",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "pugLintConfig": {
    "extends": "rapid"
  },
  "stylintrc": {
    "blocks": false,
    "brackets": "never",
    "colons": "always",
    "colors": "always",
    "commaSpace": "always",
    "commentSpace": "always",
    "cssLiteral": "never",
    "customProperties": [],
    "depthLimit": false,
    "duplicates": true,
    "efficient": "always",
    "exclude": [],
    "extendPref": "@extend",
    "globalDupe": true,
    "groupOutputByFile": true,
    "indentPref": 2,
    "leadingZero": "never",
    "maxErrors": false,
    "maxWarnings": false,
    "mixed": true,
    "mixins": [],
    "namingConvention": "camelCase",
    "namingConventionStrict": true,
    "none": "always",
    "noImportant": true,
    "parenSpace": "never",
    "placeholders": "never",
    "prefixVarsWithDollar": "never",
    "quotePref": "single",
    "reporterOptions": {
      "columns": [
        "lineData",
        "severity",
        "description",
        "rule"
      ],
      "columnSplitter": "  ",
      "showHeaders": false,
      "truncate": true
    },
    "semicolons": "never",
    "sortOrder": "grouped",
    "stackedProperties": "never",
    "trailingWhitespace": "never",
    "universal": false,
    "valid": true,
    "zeroUnits": "never",
    "zIndexNormalize": false
  }
}
